{
    "name": "slim-i18n",
    "version": "1.0.1",
    "description": "Slim i18n lib + utils for react components",
    "author": "Igor Emets <ya.peren@yandex.ru>",
    "license": "WTFPL",
    "main": "./lib/index.js",
    "typings": "./lib/index.d.ts",
    "files": [
        "lib"
    ],
    "scripts": {
        "build": "npm run build:ts",
        "build:ts": "tsc",
        "tslint": "tslint -p tsconfig.json -c tslint.json",
        "prettier": "prettier --write *.js **/*.js **/*.ts **/*.tsx",
        "clean": "rm -rf lib",
        "prepack": "npm run clean && npm run build",
        "precommit": "lint-staged",
        "patch": "yarn version --new-version patch && npm publish",
        "minor": "yarn version --new-version minor && npm publish"
    },
    "peerDependencies": {
        "react": "^16.4.0",
        "react-dom": "^16.4.0",
        "recompose": "^0.30.0"
    },
    "devDependencies": {
        "@types/react": "^16.4.13",
        "@types/react-dom": "^16.0.7",
        "@types/recompose": "0.26.4",
        "@types/webpack-env": "1.13.6",
        "prettier": "1.14.2",
        "react": "16.4.2",
        "react-dom": "16.4.2",
        "recompose": "0.30.0",
        "tslint": "5.11.0",
        "tslint-config-prettier": "1.15.0",
        "tslint-eslint-rules": "5.4.0",
        "tslint-microsoft-contrib": "5.2.1",
        "tslint-plugin-prettier": "1.3.0",
        "tslint-react": "3.6.0",
        "typescript": "3.0.3",
        "vrsource-tslint-rules": "5.8.2"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "npm run prettier",
            "git add"
        ]
    }
}
